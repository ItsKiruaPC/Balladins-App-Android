    android:id="@+id/frameLayout2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".PageHotel">

    <TextView
        android:id="@+id/lblafficher"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
